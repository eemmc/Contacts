<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="@dimen/d120">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@id/mine_item_account_info"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.cardview.widget.CardView
            android:id="@+id/avatar_layout"
            android:layout_width="@dimen/d56"
            android:layout_height="@dimen/d56"
            android:layout_marginStart="@dimen/d16"
            app:cardCornerRadius="@dimen/d28"
            app:cardElevation="@dimen/d0"
            app:cardUseCompatPadding="false"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/avatar"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:srcCompat="@drawable/ic_person_24" />
        </androidx.cardview.widget.CardView>

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/phone"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/d24"
            android:layout_marginStart="@dimen/d12"
            android:layout_marginTop="@dimen/d4"
            android:includeFontPadding="false"
            android:text="13162705828"
            android:textColor="@color/gray_800"
            android:textSize="@dimen/s16"
            android:textStyle="bold"
            app:layout_constraintStart_toEndOf="@+id/avatar_layout"
            app:layout_constraintTop_toTopOf="@+id/avatar_layout"
            tools:ignore="HardcodedText"
            tools:text="13162705828" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/name"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/d24"
            android:layout_marginStart="@dimen/d12"
            android:includeFontPadding="false"
            android:text="小明"
            android:textColor="@color/gray_800"
            android:textSize="@dimen/s15"
            app:layout_constraintStart_toEndOf="@+id/avatar_layout"
            app:layout_constraintTop_toBottomOf="@+id/phone"
            tools:ignore="HardcodedText"
            tools:text="小明" />

        <androidx.appcompat.widget.AppCompatImageView
            android:layout_width="@dimen/d24"
            android:layout_height="@dimen/d24"
            android:layout_marginEnd="@dimen/d16"
            app:layout_constraintBottom_toBottomOf="@+id/avatar_layout"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/avatar_layout"
            app:srcCompat="@drawable/ic_arrow_right_24"
            tools:ignore="VectorDrawableCompat" />

    </androidx.constraintlayout.widget.ConstraintLayout>


</androidx.constraintlayout.widget.ConstraintLayout>