<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Theme.Contacts" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <item name="colorPrimary">@color/white</item>
        <item name="colorPrimaryVariant">@color/white</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="actionBarSize">@dimen/d48</item>
        <!-- Status bar color. -->
        <item name="android:windowTranslucentStatus">true</item>
    </style>

    <style name="Theme.Contacts.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.Contacts.Fullscreen">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <!-- fullscreen -->
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>

    <style name="Theme.Contacts.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar">
        <item name="colorControlNormal">@color/black</item>
    </style>

    <style name="Theme.Contacts.AppBarOverlay.Transparent" parent="ThemeOverlay.AppCompat.Dark.ActionBar">
        <item name="colorControlNormal">@color/white</item>
        <item name="elevation">@dimen/d0</item>
    </style>

    <style name="Theme.Education.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
</resources>